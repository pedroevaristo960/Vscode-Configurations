{
  "workbench.iconTheme": "material-icon-theme",
  "explorer.confirmDelete": false,
  "files.autoSave": "afterDelay",
  "workbench.editor.wrapTabs": true,
  "editor.formatOnSave": true,
  //"editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.alwaysShowStatus": true,
  "eslint.workingDirectories": [
    "auto"
  ],
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "window.confirmSaveUntitledWorkspace": false,
  "explorer.confirmDragAndDrop": false,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/.DS_Store": true
  },
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.trailingComma": "none",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 100,
  "screencastMode.fontSize": 54,
  // "editor.fontFamily": "Cascadia Code, monospace",
  // "editor.fontLigatures": true
  "editor.fontFamily": "JetBrains Mono, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "files.associations": {
    "*.tsx": "typescriptreact"
  },
  "explorer.confirmPasteNative": false,
  "editor.largeFileOptimizations": false,
  "chat.tools.urls.autoApprove": {
    "https://www.dtser.pn.gov.ao": true,
    "https://*.dtser.pn.gov.ao": true,
    "https://*.pn.gov.ao": true,
    "https://*.gov.ao": true,
    "https://www.governo.gov.ao": true,
    "https://*.governo.gov.ao": true,
    "https://www.sepe.gov.ao": true,
    "https://*.sepe.gov.ao": true
  },
  "chat.viewSessions.orientation": "stacked"
}